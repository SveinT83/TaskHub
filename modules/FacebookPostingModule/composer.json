{
    "name": "taskhub/facebook-posting-module",
    "description": "Module for posting to Facebook Groups and Pages using Meta SDK",
    "type": "library",
    "require": {
      "php": "^8.0"
    },
    "require-dev": {
      "phpunit/phpunit": "^9.5"
    },
    "autoload": {
      "psr-4": {
        "Modules\\FacebookPostingModule\\": "src/"
      }
    },
    "autoload-dev": {
      "psr-4": {
        "Modules\\FacebookPostingModule\\Test\\": "test/"
      }
    },
    "scripts": {
      "post-autoload-dump": [
        "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
        "php artisan package:discover --ansi"
      ]
    },
    "config": {
      "optimize-autoloader": true,
      "preferred-install": "dist",
      "sort-packages": true
    },
    "extra": {
      "laravel": {
        "providers": [
          "Modules\\FacebookPostingModule\\Providers\\FacebookPosterServiceProvider"
        ],
        "aliases": {
          "FacebookApiService": "Modules\\FacebookPostingModule\\Services\\FacebookApiService"
        }
      }
    }
  }
